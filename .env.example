# Price Sense Crawler Environment Configuration
# Copy this file to .env and modify the values according to your setup

# =====================================
# DATABASE SETTINGS
# =====================================
DATABASE_URL=postgresql://username:password@localhost:5432/pricesense
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# =====================================
# REDIS SETTINGS
# =====================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=30
REDIS_SOCKET_CONNECT_TIMEOUT=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Redis Queue Names
REDIS_CRAWL_QUEUE_NAME=pricesense:crawl:queue
REDIS_RESULT_QUEUE_NAME=pricesense:result:queue
REDIS_DEAD_LETTER_QUEUE=pricesense:dead:queue

# =====================================
# CRAWLER SETTINGS
# =====================================
CRAWLER_MAX_WORKERS=10
CRAWLER_REQUEST_DELAY=(1,5)
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=60
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT_ROTATION=true
CRAWLER_MIN_CONFIDENCE_SCORE=0.7
CRAWLER_DUPLICATE_CHECK_WINDOW=600

# =====================================
# LOGGING SETTINGS
# =====================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH=logs/crawler.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_LOGGING=true
LOG_INCLUDE_TRACE=true

# =====================================
# SECURITY SETTINGS
# =====================================
SECURITY_CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
SECURITY_HEADLESS_MODE=true
SECURITY_DISABLE_IMAGES=true
SECURITY_DISABLE_CSS=true
SECURITY_PROXY_ENABLED=false
SECURITY_PROXY_ROTATION=false

# =====================================
# APPLICATION SETTINGS
# =====================================
APP_NAME="Price Sense Crawler"
APP_VERSION="1.0.0"
DEBUG=false